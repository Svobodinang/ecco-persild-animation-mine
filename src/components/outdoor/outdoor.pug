mixin outdoor(blockData)
    section.section.outdoor
        img.img.outdoor__img.outdoor__img--1.inview.from-transform(src="~/assets/images/outdoor-1.png", alt="Фотография Анны Персильд")
        .outdoor__title-block
            h2.title.outdoor__title
                +animTitle(blockData.title)
            p.outdoor__text.inview.from-opacity!=blockData.text
        .outdoor__interview-block
            .outdoor__line.line(aria-hidden)
            +interview(blockData.interview, 'question-big-margin-bottom')
        img.img.outdoor__img.outdoor__img--2.inview.from-opacity(src="~/assets/images/outdoor-2.png", alt="Фотография Анны Персильд")