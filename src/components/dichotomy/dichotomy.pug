mixin dichotomy(blockData)
    .dichotomy
        .dichotomy__title-section
            .dichotomy__title-block
                h2.title.dichotomy__title
                    span.dichotomy__title-item
                        +animTitle(blockData.title[0])
                    span.dichotomy__title-item
                        +animTitle(blockData.title[1])
                p.dichotomy__text.inview.from-opacity!=blockData.text
            img.img.dichotomy__img.dichotomy__img--1(src="~/assets/images/dichotomy-1.png", alt="Фотография Юлии и Анны Персильд")
        .dichotomy__interview-section
            +interview(blockData.interview)
            .line.dichotomy__line(aria-hidden)
            .collage
                img.img.collage__img.inview.parallax(parallax src="~/assets/images/dichotomy-2.png", alt="Фотография Юлии Персильд")